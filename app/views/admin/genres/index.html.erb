<h2>ジャンル一覧・追加</h2>
<div class="col-md-4">
  <label for="genre_name">ジャンル名</label>
  <%= form_with model:@genre, url: admin_genres_path do |f| %>
  <%= f.text_field :name, class: "form-control", placeholder:"ジャンル名" %>
  <%= f.submit '新規登録', class: "btn btn-success" %>
  <% end %>
  <table class="table">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>