<div class="container">
  <div class="bg-light text-center">
    <h4>商品新規登録</h4>
  </div>
  <% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <% @item.errors.full_messages.each do |message| %>
  <%= message %><br>
  <% end %>
  <% end %>

  <%= form_with model: @item, url: admin_items_path, local: true do |f| %>

  <div class="row">
    <%= f.label :商品画像, class: "col-md-5 text-center" %>
    <%= f.attachment_field :image, class: "col-md-6" %>
  </div>
  <div class="row">
    <%= f.label: 商品名, class: "col-md-5 text-center" %>
    <%= f.text_field :name, class: "col-md-3 form-control" %>
  </div>
  <div class="row">
    <%= f.label: 商品説明, class: "col-md-5 text-center" %>
    <%= f.text_area :introduction, class: "col-md-3 form-control" %>
  </div>
  <div class="row">
    <%= f.label :ジャンル, class: "col-md-5 text-center" %>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
  </div>
  <div class="row">
    <%= f.label :税抜価格, class: "col-md-5 text-center" %>
    <%= f.text_field :price, class: "ml-3" %>円
  </div>
  <div class="row mb-5">
    <%= f.label :販売ステータス, class: "col-md-5 text-center" %>
    <%= f.radio_button :is_active, true, class: "form-check mt-2 ml-3" %>
    <%= f.label :is_active, '販売中', value: true, class: "form-check-label ml-1" %>
    <%= f.radio_button :is_active, false, class: "form-check mt-2 ml-1" %>
    <%= f.label :is_active, '販売停止中', value: false, class: "form-check-label ml-1" %>
  </div>

  <div class="row mt-5">
    <div class="col-md-5">
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>