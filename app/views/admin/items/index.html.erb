<div class="container">
  <div class="row">
    <div class="col-md-2 text-center">
      <h4>商品一覧</h4>
    </div>
    <div class="col-md-8">
      <%= link_to "新規登録画面", new_admin_item_path, class: "btn btn-primary" %>
    </div>
  </div>
  <table class="table table-hover">
    <thead class="bg-light">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <% @items.each do |item| %>
    <tbody>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item.id), method: :get do %>
          <%= item.name %>
          <% end %>
        </td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active == true %>
          販売中
          <% else %>
          販売停止中
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>