<div class="container">
  <div class="row">
    <h2>商品一覧</h2>
  </div>
  <div class="row mt-1">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>ジャンル</th>
          <th>販売ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active ? '販売中' : '売り切れ' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="text-center">
    <%= paginate @items %>
  </div>
</div>