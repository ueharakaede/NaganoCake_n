<div class="container">
  <h2>商品詳細</h2>
</div>

<div class="row">
  <div class="col-sm-5">
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= attacment_image_tag(@item, :image, size: "200x200", fallback: "no_image.jpg") %>
          </td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>
          （税抜価格）</td>
          <td><%= @item..with_tax_price.to_s(:delimited) %>(<%= (@item.price).to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><%= @item.is_active ? '販売中' : '売り切れ' %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
  </div>
</div>