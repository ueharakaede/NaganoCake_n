<h3>
  <div class="row mt-3">
    <div class="col-sm-3">
      <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
</h3>
  <div class="row">
    <div class="offset-3">
      <table class="table">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%= @customer.is_deleted ? '有効' : '退会' %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
    </div>
  </div>
  
  <div class="mx-auto">
    <%= link_to "編集する", adit_admin_customer_path(@customer.id), class: "btn btn-success" %>
    <%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-warning" %>
  </div>