  <h2>会員一覧</h2>
  <div class="row mt-3">
   <div class="col-sm-10">
     <table class="table">
       <thead>
         <tr>
           <th>会員ID</th>
           <th>氏名</th>
           <th>メールアドレス</th>
           <th>ステータス</th>
         </tr>
       </thead>
       <tbody>
         <% @customers.each do |customer| %>
         <tr>
           <td><%= customer.id %></td>
           <td>
             <%= link_to admin_customer_path(customer) do %>
             <%= customer.last_name %>
             <%= customer.first_name %>
             <% end %>
            </td>
            <td><%= customer.email %></td>
            <td><%= customer.is_deleted ? '有効' : '退会' %></td>
         </tr>
         <% end %>
       </tbody>
     </table>
     <div class="container">
       <div class="row">
         <div class="col-md-4">
           <%= paginate @customers %>
         </div>
       </div>
     </div>
   </div>
  </div>