<div class="container">
  <div class="row">
    <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
    <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
  <div class="form-group">
    <%= f.label :会員ID %>
    <%= f.label @customer.id, class: "col-sm-4" %>
  </div>
  <div class="form-group">
    <%= f.label :氏名, class: "form-control col-sm-4" %>
    <%= f.text_field :last_name, class: "form-control col-sm-4" %>
    <%= f.text_field :first_name, class: "form-control col-sm-4" %>
  </div>
  <div class="form-group">
    <%= f.label :フリガナ, class: "form-control col-sm-4" %>
    <%= f.text_field :last_name_kana, class: "form-control col-sm-4" %>
    <%= f.text_field :first_name_kana, class: "form-control col-sm-4" %>
  </div>
  <div class="form-group">
    <%= f.label :郵便番号, class: "col-sm-4" %>
    <%= f.text_field :telephone_number, class: "form-control col-sm-4" %>
  </div>
  <div class="form-group">
    <%= f.label :住所, class: "col-sm-4" %>
    <%= f.text_field :address, class: "form-control col-sm-4" %>
  </div>
  <div class="form-group">
    <%= f.label :電話番号, class: "col-sm-4" %>
    <%= f.text_field :telephone_number, class: "form-control col-sm-4" %>
  </div>
  <div class="form-group">
    <%= f.label :メールアドレス, class: "col-sm-4" %>
    <%= f.text_field :email, class: "form-control col-sm-4" %>
  </div>
  <div class="form-group">
    <%= f.label :会員ステータス, class: "col-sm-4" %>
    <%= f.radio_button :is_daleted, :true %>
    <%= f.label :is_daleted, "有効" %>
    <%= f.radio_button :is_daleted, :false %>
    <%= f.label :is_daleted, "退会" %>
  </div>
  <div class="row">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
  <% end %>
  </div>
</div>