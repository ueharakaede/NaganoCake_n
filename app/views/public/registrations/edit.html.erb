<div class="conteiner my-5">
  <div class="row">
    <%= form_with model: @customer, url: customers_edit_path, local: true, do |f| %>
    <h2>会員情報編集</h2>
    <div class="form-group row">
      <%= f.label :氏名, class: "col-sm-4" %>
      <%= f.text_field :last_name, class: "form-control col-sm-4" %>
      <%= f.text_field :first_name, class: "form-control col-sm-4" %>
    </div>
    
    <div class="form-group row">
      <%= f.label :フリガナ, class: "col-sm-4" %>
      <%= f.text_field :last_name_kana, class: "form-control col-sm-4" %>
      <%= f.text_field :first_name_kana, class: "form-control col-sm-4" %>
    </div>
    
    <div class="form-group row">
      <%= f.label :郵便番号, class: "col-sm-4" %>
      <%= f.text_field :postal_code, class: "form-control col-sm-4" %>
    </div>
    
    <div class="form-group row">
      <%= f.label :住所, class: "col-sm-4" %>
      <%= f.text_field :address, class: "form-control col-sm-4" %>
    </div>
    
    <div class="form-group row">
      <%= f.label :電話番号, class: "col-sm-4" %>
      <%= f.text_field :telephone_number, class: "form-control col-sm-4" %>
    </div>
    
    <div class="form-group row">
      <%= f.label :メールアドレス, class: "col-sm-4" %>
      <%= f.text_field :email, class: "form-control col-sm-4" %>
    </div>
    
    <div class="form-group row">
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
      <%= link_to "退会する", customers_unsubscribe_path(@customer), class: "btn btn-danger mt-auto" %>
    </div>
    <% end %>
  </div>
</div>