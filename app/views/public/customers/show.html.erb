<div class= "container mb-5">
  <div class="row">
    <div class="col-md-5 bg-light text-center pt-2">
      <h3>マイページ</h3>
    </div>
  </div>
</div>
<div class="container mb-3">
  <div class="row">
    <div class="col-md-3">
      <h4>登録情報</h4>
    </div>
    <div class="col-md-2">
      <%= link_to "編集する", public_edit_customer_path(@customer.id), class: "btn btn-success" %>
    </div>
  </div>
</div>
<div class="container my-5">
  <table class="table">
    <tr>
      <td>氏名</td>
      <td>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
      </td>
    </tr>
    <tr>
      <td>カナ</td>
      <td>
        <%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>
      </td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </table>
</div>

<div class="container mb-3">

</div>